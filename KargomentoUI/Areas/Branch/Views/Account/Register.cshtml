@model RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>

    <title>Flat Able - Premium Admin Template by Phoenixcoded</title>
    <!-- HTML5 Shim and Respond.js IE11 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 11]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="Phoenixcoded" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/admintheme/assets/images/favicon.ico" type="image/x-icon">

    <!-- vendor css -->
    <link rel="stylesheet" href="~/admintheme/assets/css/style.css">




</head>
<body>
    <!-- [ auth-signup ] start -->
    <div class="auth-wrapper">
        <div class="auth-content text-center">
            <img src="assets/images/logo.png" alt="" class="img-fluid mb-4">
            <div class="card borderless">
                <div class="row align-items-center text-center">
                    <div class="col-md-12">
                        <div class="card-body" >
                            <form asp-action="Register" asp-controller="Account" asp-area="Branch">
                                <div asp-validation-summary="All"></div>
                                <h4 class="f-w-400">KAYIT OL</h4>
                                <hr>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="Username" placeholder="Kullanıcı Adı" asp-for="Username">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="Name" placeholder="İsim" asp-for="Name">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="Surname" placeholder="Soyisim" asp-for="Surname">
                                </div>
                                <div class="form-group mb-4">
                                    <input type="TcNo" class="form-control" id="TcNo" placeholder="TC No" asp-for="TcNo">
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" id="Email" placeholder="E-Posta" asp-for="Email">
                                </div>
                                <div class="form-group mb-4">
                                    <input type="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Telefon" asp-for="PhoneNumber">
                                </div>

                                <div class="form-group mb-4">
                                    <input type="Password" class="form-control" id="Password" placeholder="Şifre" asp-for="Password">
                                </div>
                                <div class="form-group mb-4">
                                    <input type="PasswordConfirm" class="form-control" id="PasswordConfirm" placeholder="Şifre Tekrar" asp-for="PasswordConfirm">
                                </div>





                                <button class="btn btn-primary btn-block mb-4">KAYDET</button>
                                <hr>
                                <p class="mb-2">Zaten bir hesabınız var mı? <a href="auth-signin.html" class="f-w-400">Giriş Yap</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ auth-signup ] end -->
    <!-- Required Js -->
    <script src="~/admintheme/assets/js/vendor-all.min.js"></script>
    <script src="~/admintheme/assets/js/plugins/bootstrap.min.js"></script>

    <script src="~/admintheme/assets/js/pcoded.min.js"></script>



</body>

</html>
